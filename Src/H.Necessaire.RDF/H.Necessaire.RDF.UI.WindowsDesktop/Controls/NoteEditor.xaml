<?xml version="1.0" encoding="utf-8"?>
<local:NoteEditorBase
    x:Class="H.Necessaire.RDF.UI.WindowsDesktop.Controls.NoteEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:H.Necessaire.RDF.UI.WindowsDesktop.Controls"
    xmlns:hn="using:H.Necessaire.RDF.UI.Runtime"
    xmlns:root="using:H.Necessaire.RDF.UI.WindowsDesktop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    HorizontalAlignment="Stretch"
    HorizontalContentAlignment="Stretch"
    >

    <Grid HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <TextBox
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            VerticalContentAlignment="Center"
            PlaceholderText="ID"
            Text="{x:Bind NoteBeingEdited.ID, Mode=OneWay}"
            TextChanged="ID_TextChanged"
            />

        <TextBox
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalContentAlignment="Center"
            PlaceholderText="Value"
            Text="{x:Bind NoteBeingEdited.Value, Mode=OneWay}"
            TextChanged="Value_TextChanged"
            />

    </Grid>

</local:NoteEditorBase>
